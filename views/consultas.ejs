<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Consultas</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- CSS -->
  <link rel="stylesheet" href="/css/consultas.css">
</head>
<body>
  <header><%- include("./partials/navbar") %> </header>
  <main class="container">
    <h1>Consultas</h1>
    <hr/>
      <form action="/searchresult" method="get" class="form-floating mb-3 row">
        <input class="form-control" type="search" name="search" id="floatingInput">
        <label for="floatingInput">Digite um nome ou email.</label>
        <button class="btn btn-primary w-100">Pesquisar</button>
      </form>
    <hr/>
    <table class="table table-bordered">
      <tr>
        <th scope="col">Consulta</th>
        <th scope="col">Paciente</th>
        <th scope="col">Email</th>
      </tr>
      <% appos.forEach((appo)=> { %>
        <tr>
          <td class="w-25"><%= appo.description %></td>
          <td class="w-25"><%= appo.nome %></td>
          <td class="w-25"><%= appo.email %></td>
        </tr>
      <% }) %>
    </table>
  </main>
</body>
</html>